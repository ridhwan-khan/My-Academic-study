#task16
n= int(input('enter a value:')) 
max=0 
min=0
avg=0
count=0
total=0
for i in range(1,n+1):  
    num= int(input('enter a number='))
    count+=1
    total+=num
    avg= total/ count
    if num>max:
        max=num 
    elif num<min:
        min= num 
# print('COUNT',count)
# print ('TOTAL',total)
print('AVERAGE:',avg)
print('MAX',max)
print('MINIMUM',min)
    